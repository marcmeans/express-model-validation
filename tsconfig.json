{
  "compilerOptions": {
    "baseUrl": ".",
    "diagnostics": false,
    "forceConsistentCasingInFileNames": true,
    "listFiles": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
	"declaration": true
  },

  "exclude": [
    "node_modules",
    "test"
  ]
}